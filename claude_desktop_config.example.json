{
  "mcpServers": {
    "trading-local": {
      "command": "uv",
      "args": [
        "--directory",
        "/path/to/mcp-trading",
        "run",
        "trading.py"
      ],
      "env": {
        "TRADIER_SANDBOX_ACCESS_TOKEN": "sandbox_access_token",
        "TRADIER_SANDBOX_ACCOUNT_NUMBER": "sandbox_account_number",
        "TRADIER_ACCESS_TOKEN":"access_token",
        "TRADIER_ACCOUNT_NUMBER":"account_number",
        "TRADIER_SANDBOX_ENDPOINT":"https://sandbox.tradier.com",
        "TRADIER_ENDPOINT":"https://api.tradier.com"
      }
    },
    "trading-remote": {
      "command": "npx",
      "args": ["-y", "mcp-remote", "https://your-server-url.com/mcp/"],
      "icon": "üìà",
      "_comment": "‚ö†Ô∏è IMPORTANT: The URL MUST end with /mcp/ (with trailing slash) to match OAuth resource metadata"
    }
  }
}
